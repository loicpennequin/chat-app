{
    "env": {
        "es6": true,
        "node": true,
        "browser": true
    },
    "extends": ["prettier", "plugin:react/recommended"],
    "globals": {
        "React": true
    },
    "plugins": ["react"],
    "settings": {
        "react": {
            "version": "16.4"
        }
    },
    "parserOptions": {
        "ecmaVersion": 2018,
        "ecmaFeatures": {
            "experimentalObjectRestSpread": true,
            "jsx": true
        },
        "sourceType": "module"
    },
    "parser": "babel-eslint",
    "rules": {
        "arrow-spacing": [2, { "before": true, "after": true }],
        "no-duplicate-case": 2,
        "no-duplicate-imports": 2,
        "handle-callback-err": [2, "^(err|error)$"],
        "no-var": 2,
        "no-unsafe-finally": 2,
        "no-unsafe-negation": 2,
        "no-new-func": 2,
        "no-new-object": 2,
        "no-new-require": 2,
        "no-new-symbol": 2,
        "no-new-wrappers": 2,
        "strict": [2, "never"],
        "react/jsx-uses-react": 2,
        "react/jsx-uses-vars": 2,
        "react/display-name": 0,
        "react/prop-types": 0,
        "react/react-in-jsx-scope": 2,
        "no-invalid-regexp": 2,
        "spaced-comment": [
            2,
            "always",
            {
                "line": { "markers": ["*package", "!", ","] },
                "block": {
                    "balanced": true,
                    "markers": ["*package", "!", ","],
                    "exceptions": ["*"]
                }
            }
        ],
        "valid-typeof": 2,
        "no-unused-vars": [2, { "vars": "all", "args": "none" }],
        "no-useless-call": 2,
        "no-console": 0,
        "no-constant-condition": 0,
        "jsx-quotes": ["warn", "prefer-double"],
        "indent": ["error", 4, { "SwitchCase": 1 }],
        "quotes": [
            "error",
            "single",
            { "avoidEscape": true, "allowTemplateLiterals": true }
        ],
        "semi": ["error", "always"]
    }
}
